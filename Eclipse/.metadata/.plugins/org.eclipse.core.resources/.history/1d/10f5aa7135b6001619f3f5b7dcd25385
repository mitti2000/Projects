import java.awt.*; //Alle Klasse des Abstrakt Window Toolkit
import java.awt.geom.*; //Alle Klassen des Geometrie-Pakets

public class Kreis {
    // Attribute
    private int radius; //Radius des Kreises
    private int xPosition; //x-Koordinate des linken oberen Punktes des Rechtecks
    private int yPosition; //y-Koordinate des linken oberen Punktes des Rechtecks
    private String color; //FŸllfarbe des Rechtecks
    
    // Konstruktor
    public Kreis() {
        this.radius=10;
        this.xPosition=50;
        this.yPosition=50;
        this.color="blue";
        this.draw();
    }
    
    public Kreis(int xPosition, int yPosition, int radius, String color) {
        this.radius=radius;
        this.xPosition=xPosition;
        this.yPosition=yPosition;
        this.color=color;
        this.draw();
    }

    // Dienste
    public void draw(){ //mit private und public ausprobieren
        Canvas canvas = Canvas.getCanvas();
        canvas.draw(this, color, "Kreis", new Ellipse2D.Double(xPosition, yPosition, radius, radius));
    }

}
