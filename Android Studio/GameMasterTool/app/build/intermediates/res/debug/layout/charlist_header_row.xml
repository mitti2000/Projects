<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView android:id="@+id/charActive"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/table_chararacter_title"
        android:textColor="@color/text_dark"
        android:text=""
        android:layout_weight="10" />

    <TextView android:id="@+id/charName"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/table_chararacter_title"
        android:textColor="@color/text_dark"
        android:text= "@string/Name"
        android:layout_weight="44" />

    <TextView android:id="@+id/charInitiative"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/table_chararacter_title"
        android:textColor="@color/text_dark"
        android:text="@string/initiative_short"
        android:layout_weight="12" />

    <TextView android:id="@+id/charHealthPoints"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:textSize="@dimen/table_chararacter_title"
        android:textColor="@color/text_dark"
        android:text="@string/HealthPoints"
        android:layout_weight="12"
        android:textStyle="bold" />

    <TextView android:id="@+id/charStamina"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/table_chararacter_title"
        android:textColor="@color/text_dark"
        android:text="@string/stamina"
        android:layout_weight="12" />

    <TextView android:id="@+id/charNPC"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:textSize="@dimen/table_chararacter_title"
        android:textColor="@color/text_dark"
        android:text="@string/npc"
        android:layout_weight="10"
        android:textStyle="bold" />


</LinearLayout><!-- From: file:/C:/MittiUnityProjects/trunk/Android%20Studio/GameMasterTool/app/src/main/res/layout/charlist_header_row.xml -->