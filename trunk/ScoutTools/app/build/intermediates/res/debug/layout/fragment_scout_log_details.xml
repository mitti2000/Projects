<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.galileo.scouttools.app.ScoutLogDetailsFragment">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoutlog_details_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/hello_world"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/scoutlog_details_content"
        android:layout_below="@+id/scoutlog_details_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:text="@string/app_name"
        android:gravity="top" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/scoutlog_details_image"
        android:layout_below="@+id/scoutlog_details_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher"
        android:scaleType="centerCrop" />
</RelativeLayout>
