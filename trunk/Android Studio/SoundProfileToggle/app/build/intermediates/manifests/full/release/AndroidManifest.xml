<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mittidesign.soundprofiletoggle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/speaker"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver android:name="com.mittidesign.soundprofiletoggle.SoundToggleWidgetProvider" >

            <!--
            android:icon="@drawable/speaker"
            android:label="Sound Toggle"
            -->

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sound_toggle_provider_info" />
        </receiver>
        <receiver
            android:name="com.mittidesign.soundprofiletoggle.SoundToggleIntentReciever"
            android:label="widgetBroadcastReciever" >
            <intent-filter>
                <action android:name="com.mittidesign.intent.action.CHANGE_IMAGE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sound_toggle_provider_info" />
        </receiver>
    </application>

</manifest>