<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mittidesign.soundprofiletoggle"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/speaker"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver
            android:name="com.mittidesign.soundprofiletoggle.SoundToggleWidgetProvider"
            android:icon="@drawable/speaker"
            android:label="Sound Toggle" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sound_toggle_provider_info" />
        </receiver>
        <receiver
            android:name="com.mittidesign.soundprofiletoggle.SoundToggleIntentReciever"
            android:icon="@mipmap/speaker"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.mittidesign.intent.action.CHANGE_IMAGE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sound_toggle_provider_info" />
        </receiver>
        <receiver
            android:name="com.mittidesign.soundprofiletoggle.RingerModeIntentReciever"
            android:icon="@mipmap/speaker" >
            <intent-filter>
                <action android:name="android.media.RINGER_MODE_CHANGED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sound_toggle_provider_info" />
        </receiver>

        <service
            android:name="com.mittidesign.soundprofiletoggle.MyNotificationListener"
            android:label="@string/service_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" >
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
    </application>

</manifest>