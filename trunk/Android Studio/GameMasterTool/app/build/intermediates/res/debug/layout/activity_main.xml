<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/paper_background"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/dice_roller_area"
        android:layout_weight="25">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/dice_area"
            android:weightSum="100"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/dice_result_area"
                android:layout_weight="70">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/dice_result_tag"
                    android:id="@+id/dice_result_tag"
                    android:layout_weight="12.5"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_dice_result_tag"

                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/dice_result"
                    android:layout_weight="48"
                    android:background="@drawable/bg_dice_result"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_dice_result"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/last_5_rolls_tag"
                    android:id="@+id/last_5_rolls_tag"
                    android:layout_weight="12.5"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_last_5_rolls_tag"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/last_5_rolls"
                    android:layout_weight="27"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_last_5_rolls" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/dice_rolling_area"
                android:layout_weight="30">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/dice_2_to_10_area"
                    android:layout_weight="5">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D2"
                        android:id="@+id/dice_d2"
                        android:layout_weight="2"
                        android:background="@drawable/button_dice"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_1digit" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D4"
                        android:id="@+id/dice_d4"
                        android:layout_weight="2"
                        android:background="@drawable/button_dice"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_1digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D6"
                        android:id="@+id/dice_d6"
                        android:layout_weight="2"
                        android:background="@drawable/button_dice"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_1digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D8"
                        android:id="@+id/dice_d8"
                        android:layout_weight="2"
                        android:background="@drawable/button_dice"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_1digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D10"
                        android:id="@+id/dice_d10"
                        android:layout_weight="2"
                        android:background="@drawable/button_dice"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_2digit"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/dice_10_to_clear_area"
                    android:layout_weight="5">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D12"
                        android:id="@+id/dice_d12"
                        android:layout_weight="2"
                        android:background="@drawable/button_dice"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_2digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D20"
                        android:id="@+id/dice_d20"
                        android:layout_weight="2"
                        android:background="@drawable/button_dice"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_2digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D30"
                        android:id="@+id/dice_d30"
                        android:layout_weight="2"
                        android:background="@drawable/button_dice"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_2digit"
                        />
                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D100"
                        android:id="@+id/dice_d100"
                        android:layout_weight="2"
                        android:background="@drawable/button_dice"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_3digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clear"
                        android:id="@+id/dice_clear"
                        android:layout_weight="2"
                        android:background="@drawable/button_dice"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_dice_size_clear"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/charList"
        android:layout_weight="30"
        android:layout_marginBottom="5dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"></FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selected_character"
            android:id="@+id/tag_selected_char"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Name"
            android:id="@+id/tag_charName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/detail_text"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/input_charName"
            android:paddingRight="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_charName"
            android:textSize="@dimen/detail_text"
            android:layout_toRightOf="@+id/tag_charName"
            android:layout_toEndOf="@+id/tag_charName"
            android:layout_below="@+id/tag_selected_char" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_char_backward"
            android:layout_toRightOf="@+id/tag_selected_char"
            android:layout_toEndOf="@+id/tag_selected_char"
            android:layout_alignBottom="@+id/tag_selected_char"
            android:background="@drawable/button_backward"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_char_forward"
            android:layout_toRightOf="@+id/btn_char_backward"
            android:layout_toEndOf="@+id/tag_selected_char"
            android:layout_alignBottom="@+id/tag_selected_char"
            android:background="@drawable/button_forward" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initiative_short"
            android:id="@+id/tag_initiative"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/input_initiative"
            android:textSize="@dimen/detail_text"
            android:textStyle="bold"
            android:paddingRight="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="3"
            android:id="@+id/input_initiative"
            android:layout_below="@+id/input_charName"
            android:layout_toRightOf="@+id/tag_stamina"
            android:textSize="@dimen/detail_title" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_initiative_minus"
            android:background="@drawable/button_minus"
            android:layout_alignTop="@+id/input_initiative"
            android:layout_alignBottom="@+id/input_initiative"
            android:layout_toRightOf="@+id/input_initiative"
            android:paddingLeft="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_initiative_plus"
            android:background="@drawable/button_plus"
            android:layout_alignTop="@+id/input_initiative"
            android:layout_alignBottom="@+id/input_initiative"
            android:layout_toRightOf="@+id/btn_initiative_minus"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/HealthPoints"
            android:id="@+id/tag_healthPoints"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/input_healthPoints"
            android:textSize="@dimen/detail_text"
            android:textStyle="bold"
            android:paddingRight="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="3"
            android:id="@+id/input_healthPoints"
            android:layout_below="@+id/input_initiative"
            android:layout_toRightOf="@+id/tag_stamina"
            android:textSize="@dimen/detail_title" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_healthPoints_minus"
            android:background="@drawable/button_minus"
            android:layout_alignTop="@+id/input_healthPoints"
            android:layout_alignBottom="@+id/input_healthPoints"
            android:layout_toRightOf="@+id/input_healthPoints"
            android:paddingLeft="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_healthPoints_plus"
            android:background="@drawable/button_plus"
            android:layout_alignTop="@+id/input_healthPoints"
            android:layout_alignBottom="@+id/input_healthPoints"
            android:layout_toRightOf="@+id/btn_initiative_minus"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stamina"
            android:id="@+id/tag_stamina"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/input_stamina"
            android:textSize="@dimen/detail_text"
            android:textStyle="bold"
            android:paddingRight="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="3"
            android:id="@+id/input_stamina"
            android:layout_below="@+id/input_healthPoints"
            android:layout_toRightOf="@+id/tag_stamina"
            android:textSize="@dimen/detail_title" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_stamina_minus"
            android:background="@drawable/button_minus"
            android:layout_alignTop="@+id/input_stamina"
            android:layout_alignBottom="@+id/input_stamina"
            android:layout_toRightOf="@+id/input_stamina"
            android:paddingLeft="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_stamina_plus"
            android:background="@drawable/button_plus"
            android:layout_alignTop="@+id/input_stamina"
            android:layout_alignBottom="@+id/input_stamina"
            android:layout_toRightOf="@+id/btn_initiative_minus"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isNPC"
            android:id="@+id/char_isNPC"
            android:layout_toRightOf="@+id/input_charName"
            android:layout_toEndOf="@+id/btn_char_backward"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/input_charName"
            android:textSize="@dimen/detail_text"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggle_isNPC"
            android:layout_below="@+id/char_isNPC"
            android:layout_alignLeft="@+id/char_isNPC"
            android:layout_alignStart="@+id/char_isNPC"
            android:button="@drawable/checkbox"
            android:checked="false"
            android:layout_alignRight="@+id/char_isNPC"
            android:layout_alignBottom="@+id/btn_initiative_plus"
            android:gravity="left|top" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_character"
            android:id="@+id/add_character"
            android:layout_alignTop="@+id/tag_healthPoints"
            android:layout_alignLeft="@+id/toggle_isNPC"
            android:layout_alignStart="@+id/toggle_isNPC"
            android:background="@drawable/button_long_up"
            android:textSize="@dimen/detail_title"
            android:textColor="@color/text_dark"
            android:gravity="center" />

    </RelativeLayout>
</LinearLayout>
