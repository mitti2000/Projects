<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/paper_background"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/dice_roller"
        android:layout_weight="25">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/dice_area"
            android:weightSum="100"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/dice_result"
                android:layout_weight="75">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/dice_result_tag"
                    android:id="@+id/dice_result_tag"
                    android:layout_weight="12.5"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_dice_result_tag"

                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=""
                    android:id="@+id/dice_result"
                    android:layout_weight="37.5"
                    android:background="@drawable/bg_dice_result"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_dice_result"
                    android:textStyle="bold"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/last_5_rolls_tag"
                    android:id="@+id/last_5_rolls_tag"
                    android:layout_weight="12.5"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_last_5_rolls_tag"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/last_5_rolls"
                    android:layout_weight="37.5"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_last_5_rolls"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/dice_rolling"
                android:layout_weight="25">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/dice_2_to_10"
                    android:layout_weight="5">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D2"
                        android:id="@+id/dice_d2"
                        android:layout_weight="2"
                        android:background="@drawable/button_custom"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_1digit" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D4"
                        android:id="@+id/dice_d4"
                        android:layout_weight="2"
                        android:background="@drawable/button_custom"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_1digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D6"
                        android:id="@+id/dice_d6"
                        android:layout_weight="2"
                        android:background="@drawable/button_custom"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_1digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D8"
                        android:id="@+id/dice_d8"
                        android:layout_weight="2"
                        android:background="@drawable/button_custom"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_1digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D10"
                        android:id="@+id/dice_d10"
                        android:layout_weight="2"
                        android:background="@drawable/button_custom"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_2digit"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/dice_10_to_clear"
                    android:layout_weight="5">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D12"
                        android:id="@+id/dice_d12"
                        android:layout_weight="2"
                        android:background="@drawable/button_custom"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_2digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D20"
                        android:id="@+id/dice_d20"
                        android:layout_weight="2"
                        android:background="@drawable/button_custom"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_2digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D30"
                        android:id="@+id/dice_d30"
                        android:layout_weight="2"
                        android:background="@drawable/button_custom"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_2digit"
                        />
                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/D100"
                        android:id="@+id/dice_d100"
                        android:layout_weight="2"
                        android:background="@drawable/button_custom"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_dice_size_3digit"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clear"
                        android:id="@+id/dice_clear"
                        android:layout_weight="2"
                        android:background="@drawable/button_custom"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_dice_size_clear"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="75">
    </LinearLayout>
</LinearLayout>
