<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/paper_background"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dice_result_tag"
        android:id="@+id/dice_result_tag"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_dice_result_tag"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/dice_result"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:background="@drawable/bg_dice_result"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_dice_result"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_5_rolls_tag"
        android:id="@+id/last_5_rolls_tag"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_last_5_rolls_tag"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/last_5_rolls"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_last_5_rolls"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/D2"
            android:id="@+id/dice_d2"
            android:layout_weight="2"
            android:background="@drawable/button_custom"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_dice_size_1digit" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/D4"
            android:id="@+id/dice_d4"
            android:layout_weight="2"
            android:background="@drawable/button_custom"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_dice_size_1digit"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/D6"
            android:id="@+id/dice_d6"
            android:layout_weight="2"
            android:background="@drawable/button_custom"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_dice_size_1digit"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/D8"
            android:id="@+id/dice_d8"
            android:layout_weight="2"
            android:background="@drawable/button_custom"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_dice_size_1digit"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/D10"
            android:id="@+id/dice_d10"
            android:layout_weight="2"
            android:background="@drawable/button_custom"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_dice_size_2digit"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/D12"
            android:id="@+id/dice_d12"
            android:layout_weight="2"
            android:background="@drawable/button_custom"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_dice_size_2digit"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/D20"
            android:id="@+id/dice_d20"
            android:layout_weight="2"
            android:background="@drawable/button_custom"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_dice_size_2digit"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/D30"
            android:id="@+id/dice_d30"
            android:layout_weight="2"
            android:background="@drawable/button_custom"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_dice_size_2digit"
            />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/D100"
            android:id="@+id/dice_d100"
            android:layout_weight="2"
            android:background="@drawable/button_custom"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_dice_size_3digit"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:id="@+id/dice_clear"
            android:layout_weight="2"
            android:background="@drawable/button_custom"
            android:textColor="@color/text_red"
            android:textSize="@dimen/text_dice_size_clear"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
